{
    "name": "devc-tfg",
    "build": {
        "dockerfile": "devcontainer.dockerfile",
        "args": {
            "VARIANT": "jammy"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2.11.0": "latest",
        "ghcr.io/devcontainers/features/git:1.3.0": "os-provided",
        "ghcr.io/devcontainers/features/python:1.6.2": "3.10.14",
        "ghcr.io/devcontainers-contrib/features/pre-commit:2": "3.7.1",
        "ghcr.io/devcontainers-contrib/features/go-task:1": "v3.38.0"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "AquaSecurityOfficial.trivy-vulnerability-scanner",
                "charliermarsh.ruff",
                "davidanson.vscode-markdownlint",
                "EditorConfig.EditorConfig",
                "redhat.vscode-yaml",
                "task.vscode-task",
                "timonwong.shellcheck"
            ]
        }
    },
    "containerUser": "vscode",
    "runArgs": [
        "--env-file",
        ".devcontainer/devcontainer.env"
    ]
}
